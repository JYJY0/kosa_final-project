<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper 
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 
	<mapper namespace="com.wisenut.bbbot.member.MemberDAO">
	<!-- 회원가입 -->
	<insert id="insertMember" parameterType="com.wisenut.bbbot.member.MemberDTO">
	insert into member(id,password,residence) values (#{id},#{password},#{residence})
	
	<!-- insert into member_child(member_code, gender,birth) select member_code, #{gender}, #{birth} from member WHERE id = #{member_code}; -->
	</insert>
	
	<select id="selectMember" parameterType="String" resultType="int">
	select member_code from member WHERE id = #{id}
	</select>
	
	<insert id="insertChild" parameterType="com.wisenut.bbbot.member.MemberDTO">
		insert into member_child(member_code, gender,birth) values (#{member_code},#{gender},#{birth})
	</insert>
	
	<!-- 로그인 -->
	<select id="memberLogin" parameterType="String" resultType="com.wisenut.bbbot.member.MemberDTO">
	select * from member where id=#{id} and password=#{password}
	</select>
	
	
	<!-- 아이디 정보값 찾기 -->
	<select id="selectId"  resultType="String">
	select id from member 
	</select>
	
	</mapper>